<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kuno.viewflipperex.MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="이전"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnPrev"
            android:layout_weight="1" />

        <Button
            android:text="다음"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnNext"
            android:layout_weight="1" />
    </LinearLayout>

    <ViewFlipper
        android:id="@+id/vfDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <ImageView
            android:id="@+id/iv_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img01" />
        <ImageView
            android:id="@+id/iv_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img02" />
        <ImageView
            android:id="@+id/iv_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img03" />
        <ImageView
            android:id="@+id/iv_img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img04" />
        <ImageView
            android:id="@+id/iv_img5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img05" />
        <ImageView
            android:id="@+id/iv_img6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img06" />
        <ImageView
            android:id="@+id/iv_img7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img07" />
        <ImageView
            android:id="@+id/iv_img8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img08" />
        <ImageView
            android:id="@+id/iv_img9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img09" />
        <ImageView
            android:id="@+id/iv_img10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img10" />
        <ImageView
            android:id="@+id/iv_img11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img11" />
        <ImageView
            android:id="@+id/iv_img12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img12" />
        <ImageView
            android:id="@+id/iv_img13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img13" />
        <ImageView
            android:id="@+id/iv_img14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img14" />
        <ImageView
            android:id="@+id/iv_img15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img15" />
    </ViewFlipper>
</RelativeLayout>
